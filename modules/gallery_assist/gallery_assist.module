/*
 * Implementation of hook_block().
 */
function gallery_assist_block($op = 'list', $delta = 0, $edit = array()) {
  
  switch ($op) {
    
    case 'list' :
      
      $block[0] = array(
        'info'       => t('Galleries'),
        'title'       => t('Galleries'),
        'visibility' => 1,
      );
      $block[1] = array(
        'info'       => t('My Galleries'),
        'title'       => t('My Galleries'),
        'visibility' => 1,
      );
      $block[2] = array(
        'info'       => t('Gallery Block'),
        'title'       => t('Gallery Block'),
        'visibility' => 1,
      );
      
      return $block;
      break;

    case 'configure' :
      
      $form = array();
      $form = _gallery_assist_block_settings_form($delta);

      return $form;
      break;

    case 'save' :
      
      $post_data = $_POST;
      _gallery_assist_block_settings_form_submit($delta, $post_data);
      
      break;

    case 'view': default:
      switch ($delta) {
        case 0:
          $block['subject'] = t('Galleries');
          $block['content'] = _gallery_assist_block_display(0);
          break;
        case 1:
          $block['subject'] = t('My Galleries');
          $block['content'] = _gallery_assist_block_display(1);
          break;
        case 2:
          $block['subject'] = t('Gallery Block');
          $block['content'] = _gallery_assist_block_display(2);
          break;
      }

      return $block;

  }

}

