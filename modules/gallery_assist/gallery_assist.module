  if (empty($hilfo)) {
    return;
  }
  
  if (count($hilfo['data']['css'])) {
    foreach ($hilfo['data']['css'] as $k => $v) {
      if ($v) {
        drupal_add_css($k);
      }
    }
  }
  
  if (count($hilfo['data']['js'])) {
    foreach ($hilfo['data']['js'] as $k => $v) {
      if ($v) {
        drupal_add_js($k);
      }
    }
  } 
  
  if (count($hilfo['data']['selector'])) {
    foreach ($hilfo['data']['selector'] as $k => $v) {
      if ($v) {
        drupal_add_js($k);
      }
    }
  }
}

